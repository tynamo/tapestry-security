<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>tapestry-jsecurity-sample Tapestry 5 Application</display-name>
    <context-param>
        <param-name>tapestry.app-package</param-name>
        <param-value>com.googlecode.tapestry5jsecurity.testapp</param-value>
    </context-param>
    
    <filter>
        <filter-name>app</filter-name>
        <filter-class>com.googlecode.tapestry5jsecurity.filter.JSecurityTapestryDelegatingFilter</filter-class>
        <init-param>
            <param-name>configUrl</param-name>
            <param-value>classpath:security.conf</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>app</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
      
